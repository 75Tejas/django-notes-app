pipeline {
    agent { label "vinod" }
    stages {
        stage("hello") {
            steps {
                echo "hello bhaiiiiiiiiiiiiiiiiiiii"
            }
        }
        stage("Code") {
            steps {
                echo "This is cloning the code"
                git url: "https://github.com/LondheShubham153/django-notes-app.git", branch: "main"
                echo "code cloning success"
            }
        }
        stage("Build") {
            steps {
                echo "This is building the code"
                sh 'export DOCKER_BUILDKIT=1'
                sh "whoami"
                sh "docker build -t notes-app:latest ."
            }
        }
        stage("Push to dockerhub") {
            steps {
                echo "This is Pushing the Image to Dockerhub"
                withCredentials([usernamePassword(credentialsId: 'dockerHubCred', passwordVariable: 'dockerHubPass', usernameVariable: 'dockerHubUser')]) {
                    sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPass}"
                    sh "docker image tag notes-app:latest ${env.dockerHubUser}/notesapp"
                    sh "docker push ${env.dockerHubUser}/notesapp"
                }
            }
        }
        stage("Deploy") {
            steps {
                echo "This is deploying the code"
                sh "docker compose down && docker compose up -d"
            }
        }
    }
}
